<Window x:Class="DiskWise.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:DiskWise.ViewModels"
        xmlns:converters="clr-namespace:DiskWise.Converters"
        mc:Ignorable="d"
        Title="DiskWise - Disk Space Analyzer"
        Height="800" Width="1200"
        MinHeight="600" MinWidth="900"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <converters:SizeToStringConverter x:Key="SizeConverter"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVis"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVis"/>
        <converters:BindingProxy x:Key="ViewModelProxy" Data="{Binding}"/>

        <!-- File/Folder Context Menu -->
        <ContextMenu x:Key="ItemContextMenu">
            <!-- Open -->
            <MenuItem Header="Open"
                      Command="{Binding Data.ItemDoubleClickedCommand, Source={StaticResource ViewModelProxy}}"
                      CommandParameter="{Binding}">
                <MenuItem.Icon>
                    <TextBlock Text="&#xE8E5;" FontFamily="Segoe MDL2 Assets" FontSize="14"
                               Foreground="{StaticResource TextPrimaryBrush}"/>
                </MenuItem.Icon>
            </MenuItem>
            <!-- Open File (files only) -->
            <MenuItem Header="Open with Default App"
                      Command="{Binding Data.OpenFileCommand, Source={StaticResource ViewModelProxy}}"
                      CommandParameter="{Binding}"
                      Visibility="{Binding IsDirectory, Converter={StaticResource BoolToVis}, ConverterParameter=Invert}">
                <MenuItem.Icon>
                    <TextBlock Text="&#xE8A7;" FontFamily="Segoe MDL2 Assets" FontSize="14"
                               Foreground="{StaticResource TextPrimaryBrush}"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="Open in Explorer"
                      Command="{Binding Data.OpenInExplorerItemCommand, Source={StaticResource ViewModelProxy}}"
                      CommandParameter="{Binding}">
                <MenuItem.Icon>
                    <TextBlock Text="&#xEC50;" FontFamily="Segoe MDL2 Assets" FontSize="14"
                               Foreground="{StaticResource TextPrimaryBrush}"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="Open in Terminal"
                      Command="{Binding Data.OpenInTerminalCommand, Source={StaticResource ViewModelProxy}}"
                      CommandParameter="{Binding}">
                <MenuItem.Icon>
                    <TextBlock Text="&#xE756;" FontFamily="Segoe MDL2 Assets" FontSize="14"
                               Foreground="{StaticResource TextPrimaryBrush}"/>
                </MenuItem.Icon>
            </MenuItem>

            <Separator Style="{StaticResource MenuSeparator}"/>

            <!-- Scan (folders only) -->
            <MenuItem Header="Scan Folder"
                      Command="{Binding Data.ScanFolderCommand, Source={StaticResource ViewModelProxy}}"
                      CommandParameter="{Binding}"
                      Visibility="{Binding IsDirectory, Converter={StaticResource BooleanToVis}}">
                <MenuItem.Icon>
                    <TextBlock Text="&#xE9D9;" FontFamily="Segoe MDL2 Assets" FontSize="14"
                               Foreground="{StaticResource AccentBlueBrush}"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="AI Analyze"
                      Command="{Binding Data.AskAIForItemCommand, Source={StaticResource ViewModelProxy}}"
                      CommandParameter="{Binding}">
                <MenuItem.Icon>
                    <TextBlock Text="&#xE945;" FontFamily="Segoe MDL2 Assets" FontSize="14"
                               Foreground="{StaticResource AccentPurpleBrush}"/>
                </MenuItem.Icon>
            </MenuItem>

            <Separator Style="{StaticResource MenuSeparator}"/>

            <!-- Copy -->
            <MenuItem Header="Copy Path"
                      Command="{Binding Data.CopyPathCommand, Source={StaticResource ViewModelProxy}}"
                      CommandParameter="{Binding}"
                      InputGestureText="Ctrl+Shift+C">
                <MenuItem.Icon>
                    <TextBlock Text="&#xE8C8;" FontFamily="Segoe MDL2 Assets" FontSize="14"
                               Foreground="{StaticResource TextPrimaryBrush}"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="Copy Name"
                      Command="{Binding Data.CopyNameCommand, Source={StaticResource ViewModelProxy}}"
                      CommandParameter="{Binding}">
                <MenuItem.Icon>
                    <TextBlock Text="&#xE8C8;" FontFamily="Segoe MDL2 Assets" FontSize="14"
                               Foreground="{StaticResource TextSecondaryBrush}"/>
                </MenuItem.Icon>
            </MenuItem>

            <Separator Style="{StaticResource MenuSeparator}"/>

            <!-- Delete -->
            <MenuItem Header="Move to Recycle Bin"
                      Command="{Binding Data.DeleteToRecycleBinCommand, Source={StaticResource ViewModelProxy}}"
                      CommandParameter="{Binding}">
                <MenuItem.Icon>
                    <TextBlock Text="&#xE74D;" FontFamily="Segoe MDL2 Assets" FontSize="14"
                               Foreground="{StaticResource TextPrimaryBrush}"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="Delete Permanently"
                      Command="{Binding Data.DeletePermanentlyCommand, Source={StaticResource ViewModelProxy}}"
                      CommandParameter="{Binding}"
                      Foreground="{StaticResource DangerBrush}">
                <MenuItem.Icon>
                    <TextBlock Text="&#xE107;" FontFamily="Segoe MDL2 Assets" FontSize="14"
                               Foreground="{StaticResource DangerBrush}"/>
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Navigation Bar - Modern Design -->
        <Border Grid.Row="0" Background="{StaticResource CardBrush}"
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1"
                Padding="12,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Navigation Buttons -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,16,0">
                    <Button Style="{StaticResource IconButton}"
                            Command="{Binding GoBackCommand}"
                            IsEnabled="{Binding CanGoBack}"
                            ToolTip="Back (Alt+Left)"
                            Width="36" Height="36">
                        <TextBlock Text="â—€ï¸" FontSize="16" FontWeight="Bold"/>
                    </Button>
                    <Button Style="{StaticResource IconButton}"
                            Command="{Binding GoForwardCommand}"
                            IsEnabled="{Binding CanGoForward}"
                            ToolTip="Forward (Alt+Right)"
                            Width="36" Height="36">
                        <TextBlock Text="â–¶ï¸" FontSize="16" FontWeight="Bold"/>
                    </Button>
                    <Button Style="{StaticResource IconButton}"
                            Command="{Binding GoUpCommand}"
                            IsEnabled="{Binding CanGoUp}"
                            ToolTip="Up (Alt+Up)"
                            Width="36" Height="36">
                        <TextBlock Text="â–²" FontSize="18" FontWeight="Bold"/>
                    </Button>
                    <Button Style="{StaticResource IconButton}"
                            Command="{Binding GoHomeCommand}"
                            ToolTip="Home"
                            Width="36" Height="36">
                        <TextBlock Text="ðŸ " FontSize="14"/>
                    </Button>
                </StackPanel>

                <!-- Path Display - Breadcrumb Navigation -->
                <Border Grid.Column="1" Background="{StaticResource BackgroundBrush}"
                        CornerRadius="8" Padding="8,6" Margin="0,0,16,0"
                        BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                    <ItemsControl ItemsSource="{Binding Breadcrumbs}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <Button Command="{Binding DataContext.NavigateToBreadcrumbCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"
                                            Cursor="Hand"
                                            Padding="6,4" Margin="0">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Setter Property="BorderThickness" Value="0"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border x:Name="border" Background="{TemplateBinding Background}"
                                                                    CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter TargetName="border" Property="Background" Value="{StaticResource CardHoverBrush}"/>
                                                                </Trigger>
                                                                <DataTrigger Binding="{Binding IsLast}" Value="True">
                                                                    <Setter Property="IsEnabled" Value="False"/>
                                                                </DataTrigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Button.Style>
                                        <TextBlock Text="{Binding Name}" FontSize="13" FontFamily="Segoe UI">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="{StaticResource AccentBlueBrush}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsLast}" Value="True">
                                                            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Button>
                                    <TextBlock Text="â€º" FontSize="14" FontWeight="Bold"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               VerticalAlignment="Center" Margin="2,0"
                                               Visibility="{Binding IsLast, Converter={StaticResource BoolToVis}, ConverterParameter=Invert}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Border>

                <!-- Action Buttons - Modern -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Style="{StaticResource BlueAccentButton}"
                            Command="{Binding ScanCurrentFolderCommand}"
                            Visibility="{Binding IsAtHome, Converter={StaticResource BoolToVis}, ConverterParameter=Invert}"
                            Margin="0,0,8,0" Padding="16,8">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#x1F50D;" FontSize="13" Margin="0,0,6,0"/>
                            <TextBlock Text="Scan" FontSize="13" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource ModernButton}"
                            Command="{Binding StopScanCommand}"
                            Visibility="{Binding IsScanning, Converter={StaticResource BooleanToVis}}"
                            Margin="0,0,8,0" Padding="16,8">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#x23F9;" FontSize="13" Margin="0,0,6,0"/>
                            <TextBlock Text="Stop" FontSize="13"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource IconButton}"
                            Command="{Binding RefreshCommand}"
                            ToolTip="Refresh"
                            Width="36" Height="36">
                        <TextBlock Text="&#x1F504;" FontSize="14"/>
                    </Button>
                    <Button Style="{StaticResource IconButton}"
                            ToolTip="Settings"
                            Width="36" Height="36">
                        <TextBlock Text="&#x2699;" FontSize="16"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Toolbar - Modern Design -->
        <Border Grid.Row="1" Background="{StaticResource BackgroundBrush}"
                Padding="12,8"
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Sort:" Foreground="{StaticResource TextSecondaryBrush}"
                           FontSize="12" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <ComboBox Width="90" SelectedIndex="{Binding SortByIndex}" Margin="0,0,20,0">
                    <ComboBoxItem Content="Size"/>
                    <ComboBoxItem Content="Name"/>
                    <ComboBoxItem Content="Date"/>
                </ComboBox>

                <CheckBox Content="Show Hidden"
                          IsChecked="{Binding ShowHiddenFolders}"
                          Foreground="{StaticResource TextPrimaryBrush}"
                          FontSize="12"
                          Margin="0,0,20,0"/>

                <CheckBox Content="Show Files"
                          IsChecked="{Binding ShowFiles}"
                          Foreground="{StaticResource TextPrimaryBrush}"
                          FontSize="12"
                          Margin="0,0,20,0"/>

                <Rectangle Width="1" Fill="{StaticResource BorderBrush}" Margin="8,4"/>

                <!-- Search Box -->
                <Border Background="{StaticResource CardBrush}" CornerRadius="6"
                        Padding="8,4" Margin="16,0,0,0" VerticalAlignment="Center"
                        BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                        Visibility="{Binding IsAtHome, Converter={StaticResource BoolToVis}, ConverterParameter=Invert}">
                    <Grid Width="200">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="&#x1F50D;" FontSize="12" Foreground="{StaticResource TextMutedBrush}"
                                   VerticalAlignment="Center" Margin="0,0,6,0"/>
                        <TextBox Grid.Column="1" Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                                 Background="Transparent" BorderThickness="0"
                                 Foreground="{StaticResource TextPrimaryBrush}"
                                 FontSize="12" VerticalAlignment="Center"
                                 Padding="0"/>
                        <Button Grid.Column="2" Style="{StaticResource IconButton}"
                                Command="{Binding ClearSearchCommand}"
                                Width="20" Height="20"
                                Visibility="{Binding IsSearchMode, Converter={StaticResource BooleanToVis}}">
                            <TextBlock Text="&#x2715;" FontSize="10" Foreground="{StaticResource TextMutedBrush}"/>
                        </Button>
                    </Grid>
                </Border>

                <Rectangle Width="1" Fill="{StaticResource BorderBrush}" Margin="16,4,8,4"
                           Visibility="{Binding IsAtHome, Converter={StaticResource BoolToVis}, ConverterParameter=Invert}"/>

                <TextBlock Text="AI Provider:" Foreground="{StaticResource TextSecondaryBrush}"
                           FontSize="12" VerticalAlignment="Center" Margin="8,0,8,0"/>
                <ComboBox Width="110" SelectedIndex="{Binding CurrentAIProviderIndex, Mode=TwoWay}">
                    <ComboBoxItem Content="LM Studio"/>
                    <ComboBoxItem Content="Gemini"/>
                    <ComboBoxItem Content="None"/>
                </ComboBox>
                <!--<Border Background="{StaticResource SafeBrush}" CornerRadius="10"
                        Padding="4,2" Margin="8,0,0,0" VerticalAlignment="Center"
                        Visibility="{Binding IsAIConnected, Converter={StaticResource BooleanToVis}}">
                    <TextBlock Text="âˆš" Foreground="White" Margin="5"
                               VerticalAlignment="Center"
                               FontSize="10" FontWeight="SemiBold"/>
                </Border>-->
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="280"/>
            </Grid.ColumnDefinitions>

            <!-- File List -->
            <Border Grid.Column="0" Margin="12,12,8,12">
                <Grid>
                    <!-- Home View -->
                    <Grid Visibility="{Binding IsAtHome, Converter={StaticResource BooleanToVis}}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="8">
                            <!-- Recent Folders -->
                            <TextBlock Text="&#x1F553; Recent Locations" Style="{StaticResource SectionHeader}"
                                       Visibility="{Binding RecentFolders.Count, Converter={StaticResource BoolToVis}}"
                                       FontSize="15"/>
                            <Border Background="{StaticResource CardBrush}" CornerRadius="12" Padding="8" Margin="0,0,0,24"
                                    Visibility="{Binding RecentFolders.Count, Converter={StaticResource BoolToVis}}">
                                <ItemsControl ItemsSource="{Binding RecentFolders}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Padding="8,6" Cursor="Hand" CornerRadius="6"
                                                    MouseLeftButtonDown="RecentFolder_Click">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="Transparent"/>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="{StaticResource CardHoverBrush}"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0" Text="&#x1F4C1;" FontSize="14"
                                                               Foreground="{StaticResource TextPrimaryBrush}"
                                                               Margin="0,0,10,0" VerticalAlignment="Center"/>
                                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding Name}"
                                                                   Foreground="{StaticResource TextPrimaryBrush}"
                                                                   FontSize="13" FontWeight="Medium"/>
                                                        <TextBlock Text="{Binding Path}"
                                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                                   FontSize="10"
                                                                   TextTrimming="CharacterEllipsis"/>
                                                    </StackPanel>
                                                    <TextBlock Grid.Column="2" Text="{Binding LastAccessedDisplay}"
                                                               Foreground="{StaticResource TextMutedBrush}"
                                                               FontSize="11"
                                                               VerticalAlignment="Center" Margin="12,0,0,0"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Border>

                            <!-- Drives -->
                            <TextBlock Text="&#x1F4BE; Devices and Drives" Style="{StaticResource SectionHeader}"
                                       FontSize="15"/>
                            <ItemsControl ItemsSource="{Binding Drives}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="10" Padding="12" Margin="4"
                                                Width="180" Cursor="Hand"
                                                MouseLeftButtonDown="Drive_Click">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="{StaticResource CardBrush}"/>
                                                    <Setter Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect BlurRadius="8" ShadowDepth="2"
                                                                              Opacity="0.2" Color="Black"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="{StaticResource CardHoverBrush}"/>
                                                            <Setter Property="Effect">
                                                                <Setter.Value>
                                                                    <DropShadowEffect BlurRadius="16" ShadowDepth="4"
                                                                                      Opacity="0.3" Color="Black"/>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <StackPanel>
                                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                                    <!-- Drive Icon using Segoe MDL2 Assets -->
                                                    <Border Width="36" Height="36" CornerRadius="8"
                                                            Background="{StaticResource BackgroundBrush}"
                                                            Margin="0,0,12,0" VerticalAlignment="Center">
                                                        <TextBlock Text="&#xEDA2;" FontFamily="Segoe MDL2 Assets"
                                                                   FontSize="18" Foreground="{StaticResource AccentBlueBrush}"
                                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <StackPanel VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding Name}"
                                                                   Foreground="{StaticResource TextPrimaryBrush}"
                                                                   FontWeight="SemiBold" FontSize="14"/>
                                                        <TextBlock Text="{Binding VolumeLabel}"
                                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                                   FontSize="11"/>
                                                    </StackPanel>
                                                </StackPanel>
                                                <ProgressBar Value="{Binding UsagePercentage, Mode=OneWay}"
                                                             Maximum="100" Height="6"
                                                             Style="{StaticResource DriveProgressBar}"
                                                             Margin="0,0,0,6"/>
                                                <Grid>
                                                    <TextBlock Text="{Binding UsageDisplay}"
                                                               Foreground="{StaticResource TextSecondaryBrush}"
                                                               FontSize="11" HorizontalAlignment="Left"/>
                                                    <TextBlock Text="{Binding UsagePercentage, StringFormat='{}{0:F0}%'}"
                                                               Foreground="{StaticResource TextPrimaryBrush}"
                                                               FontSize="11" FontWeight="SemiBold"
                                                               HorizontalAlignment="Right"/>
                                                </Grid>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>

                <!-- Folder View -->
                <Grid Visibility="{Binding IsAtHome, Converter={StaticResource BoolToVis}, ConverterParameter=Invert}">
                    <!-- Normal List View -->
                    <Border Background="{StaticResource CardBrush}" CornerRadius="12" Padding="4"
                            Visibility="{Binding IsSearchMode, Converter={StaticResource BoolToVis}, ConverterParameter=Invert}">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.15" Color="Black"/>
                        </Border.Effect>
                        <ListBox ItemsSource="{Binding CurrentItems}"
                                 SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 VirtualizingPanel.IsVirtualizing="True"
                                 VirtualizingPanel.VirtualizationMode="Recycling"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem" BasedOn="{StaticResource ModernListItem}">
                                    <EventSetter Event="MouseDoubleClick" Handler="Item_DoubleClick"/>
                                    <Setter Property="ContextMenu" Value="{StaticResource ItemContextMenu}"/>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="24"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="70"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="28"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Icon -->
                                        <TextBlock Grid.Column="0" Text="{Binding Icon}"
                                                   Foreground="{StaticResource TextPrimaryBrush}"
                                                   FontSize="13" VerticalAlignment="Center"/>

                                        <!-- Name -->
                                        <TextBlock Grid.Column="1" Text="{Binding Name}"
                                                   Foreground="{StaticResource TextPrimaryBrush}"
                                                   FontSize="12"
                                                   VerticalAlignment="Center"
                                                   TextTrimming="CharacterEllipsis" Margin="6,0,0,0">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsHidden}" Value="True">
                                                            <Setter Property="Opacity" Value="0.5"/>
                                                            <Setter Property="FontStyle" Value="Italic"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                        <!-- Size Bar -->
                                        <Grid Grid.Column="2" Margin="4,0">
                                            <ProgressBar Value="{Binding Percentage, Mode=OneWay}" Maximum="100"
                                                         Height="4" Style="{StaticResource SizeProgressBar}"
                                                         Visibility="{Binding IsScanned, Converter={StaticResource BooleanToVis}}"/>
                                            <TextBlock Text="â€”"
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       FontSize="10"
                                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                                       Visibility="{Binding IsScanned, Converter={StaticResource BoolToVis}, ConverterParameter=Invert}"/>
                                        </Grid>

                                        <!-- Size -->
                                        <TextBlock Grid.Column="3"
                                                   Text="{Binding Size, Converter={StaticResource SizeConverter}}"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   FontSize="11"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Right"/>

                                        <!-- Date -->
                                        <TextBlock Grid.Column="4"
                                                   Text="{Binding LastModifiedDisplay}"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   FontSize="10"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Right"/>

                                        <!-- AI Advice -->
                                        <TextBlock Grid.Column="5"
                                                   Text="{Binding Advice.Icon, FallbackValue='â€”'}"
                                                   FontSize="12"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Border>

                    <!-- Search Results View -->
                    <Border Background="{StaticResource CardBrush}" CornerRadius="12" Padding="4"
                            Visibility="{Binding IsSearchMode, Converter={StaticResource BooleanToVis}}">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.15" Color="Black"/>
                        </Border.Effect>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Search Header -->
                            <Border Grid.Row="0" Background="{StaticResource BackgroundBrush}"
                                    CornerRadius="8" Padding="12,8" Margin="8,8,8,4">
                                <Grid>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#x1F50D;" FontSize="14" Margin="0,0,8,0"
                                                   Foreground="{StaticResource AccentBlueBrush}"
                                                   VerticalAlignment="Center"/>
                                        <TextBlock Foreground="{StaticResource TextPrimaryBrush}"
                                                   FontSize="13" VerticalAlignment="Center">
                                            <Run Text="Search Results: "/>
                                            <Run Text="{Binding SearchResultCount, Mode=OneWay}" FontWeight="SemiBold"/>
                                            <Run Text=" items found"/>
                                        </TextBlock>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right"
                                                Visibility="{Binding IsSearching, Converter={StaticResource BooleanToVis}}">
                                        <TextBlock Text="Searching..." FontSize="11"
                                                   Foreground="{StaticResource TextMutedBrush}"
                                                   VerticalAlignment="Center" Margin="0,0,8,0"/>
                                        <ProgressBar IsIndeterminate="True" Width="60" Height="4"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Search Results List -->
                            <ListBox Grid.Row="1" ItemsSource="{Binding SearchResults}"
                                     SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     VirtualizingPanel.IsVirtualizing="True"
                                     VirtualizingPanel.VirtualizationMode="Recycling"
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem" BasedOn="{StaticResource ModernListItem}">
                                        <EventSetter Event="MouseDoubleClick" Handler="SearchResult_DoubleClick"/>
                                        <Setter Property="ContextMenu" Value="{StaticResource ItemContextMenu}"/>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="24"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="80"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Icon -->
                                            <TextBlock Grid.Column="0" Text="{Binding Icon}"
                                                       Foreground="{StaticResource TextPrimaryBrush}"
                                                       FontSize="13" VerticalAlignment="Center"/>

                                            <!-- Name and Path -->
                                            <StackPanel Grid.Column="1" Margin="6,0,0,0" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Name}"
                                                           Foreground="{StaticResource TextPrimaryBrush}"
                                                           FontSize="12" FontWeight="Medium"
                                                           TextTrimming="CharacterEllipsis"/>
                                                <TextBlock Text="{Binding Path}"
                                                           Foreground="{StaticResource TextMutedBrush}"
                                                           FontSize="10"
                                                           TextTrimming="CharacterEllipsis"/>
                                            </StackPanel>

                                            <!-- Size -->
                                            <TextBlock Grid.Column="2"
                                                       Text="{Binding Size, Converter={StaticResource SizeConverter}}"
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       FontSize="11"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Right"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </Border>
                </Grid>
                </Grid>
            </Border>

            <!-- Detail Panel - Modern Design -->
            <Border Grid.Column="1" Background="{StaticResource CardBrush}"
                    CornerRadius="12" Margin="4,12,12,12" Padding="16">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="12" ShadowDepth="3" Opacity="0.2" Color="Black"/>
                </Border.Effect>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- AI Search Section - Hidden at Home -->
                        <Border Background="{StaticResource BackgroundBrush}" CornerRadius="10" Padding="14" Margin="0,0,0,16"
                                Visibility="{Binding IsAtHome, Converter={StaticResource BoolToVis}, ConverterParameter=Invert}">
                            <StackPanel>
                                <TextBlock Text="&#x2728; AI Search"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>

                                <TextBlock Text="Describe what you're looking for:"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           FontSize="11" Margin="0,0,0,6"/>

                                <TextBox Text="{Binding AiSearchQuery, UpdateSourceTrigger=PropertyChanged}"
                                         Height="60" TextWrapping="Wrap" AcceptsReturn="True"
                                         FontSize="12" Margin="0,0,0,8" Padding="5"
                                         VerticalScrollBarVisibility="Auto"/>

                                <Button Style="{StaticResource AccentButton}"
                                        Command="{Binding AISearchCommand}"
                                        IsEnabled="{Binding IsAISearching, Converter={StaticResource BoolToVis}, ConverterParameter=Invert}"
                                        HorizontalAlignment="Stretch"
                                        Padding="10,8">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="&#x1F50D;" FontSize="12" Margin="0,0,6,0"/>
                                        <TextBlock FontSize="12" FontWeight="SemiBold">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="AI Search"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsAISearching}" Value="True">
                                                            <Setter Property="Text" Value="Searching..."/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                </Button>

                                <!-- AI Search Results Info -->
                                <StackPanel Margin="0,10,0,0"
                                            Visibility="{Binding IsSearchMode, Converter={StaticResource BooleanToVis}}">
                                    <TextBlock Text="Keywords used:"
                                               Foreground="{StaticResource TextMutedBrush}"
                                               FontSize="10" Margin="0,0,0,4"/>
                                    <ItemsControl ItemsSource="{Binding AiSearchKeywords}" Margin="0,0,0,8">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="{StaticResource CardHoverBrush}"
                                                        CornerRadius="4" Padding="6,3" Margin="0,0,4,4">
                                                    <TextBlock Text="{Binding}" FontSize="10"
                                                               Foreground="{StaticResource TextPrimaryBrush}"/>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                    <!-- Clear Search Button -->
                                    <Button Style="{StaticResource ModernButton}"
                                            Command="{Binding ClearAISearchCommand}"
                                            HorizontalAlignment="Stretch"
                                            Padding="8,6">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <TextBlock Text="&#x2715;" FontSize="10" Margin="0,0,6,0"
                                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                                            <TextBlock Text="Clear Results" FontSize="11"
                                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- AI Analysis Section - Hidden at Home -->
                        <Border Background="{StaticResource BackgroundBrush}" CornerRadius="10" Padding="14" Margin="0,0,0,16"
                                Visibility="{Binding IsAtHome, Converter={StaticResource BoolToVis}, ConverterParameter=Invert}">
                            <StackPanel>
                                <TextBlock Text="&#x1F916; Folder Analysis"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>

                                <TextBlock Text="Click 'Analyze' to check if safe to delete"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           FontSize="11" FontStyle="Italic"
                                           Visibility="{Binding HasDisplayedAdvice, Converter={StaticResource BoolToVis}, ConverterParameter=Invert}"/>

                                <StackPanel Visibility="{Binding HasDisplayedAdvice, Converter={StaticResource BooleanToVis}}">
                                    <Border CornerRadius="8" Padding="12,10" Margin="0,0,0,10"
                                            Background="{Binding DisplayedAdvice.Level, Converter={StaticResource AdviceLevelToColorConverter}}">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding DisplayedAdvice.Icon}" FontSize="24" Margin="0,0,10,0"
                                                       Foreground="White" VerticalAlignment="Center"/>
                                            <StackPanel VerticalAlignment="Center">
                                                <TextBlock Text="{Binding DisplayedAdvice.Level}"
                                                           Foreground="White"
                                                           FontSize="14" FontWeight="Bold"/>
                                                <TextBlock Text="AI Recommendation"
                                                           Foreground="#FFFFFFCC"
                                                           FontSize="10"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                    <TextBlock Text="{Binding DisplayedAdvice.Reason}"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               FontSize="12" LineHeight="20"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Action Buttons - Hidden at Home -->
                        <StackPanel Margin="0,0,0,16"
                                    Visibility="{Binding IsAtHome, Converter={StaticResource BoolToVis}, ConverterParameter=Invert}">
                            <Button Style="{StaticResource PurpleAccentButton}"
                                    Command="{Binding AskAICommand}"
                                    HorizontalAlignment="Stretch"
                                    Margin="0,0,0,8" Padding="12,10">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="&#x1F916;" FontSize="14" Margin="0,0,8,0"/>
                                    <TextBlock Text="Analyze" FontSize="13" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Button>
                            <Button Style="{StaticResource ModernButton}"
                                    Command="{Binding OpenInExplorerCommand}"
                                    HorizontalAlignment="Stretch"
                                    Margin="0,0,0,8" Padding="12,10">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="&#x1F4C2;" FontSize="14" Margin="0,0,8,0"/>
                                    <TextBlock Text="Open in Explorer" FontSize="13"/>
                                </StackPanel>
                            </Button>
                            <Button Command="{Binding DeleteSelectedCommand}"
                                    HorizontalAlignment="Stretch"
                                    Padding="12,10">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource ModernButton}">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="BorderBrush" Value="{StaticResource DangerBrush}"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{StaticResource DangerBrush}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="&#x1F5D1;" FontSize="14" Margin="0,0,8,0"
                                               Foreground="{StaticResource DangerBrush}"/>
                                    <TextBlock Text="Delete" FontSize="13"
                                               Foreground="{StaticResource DangerBrush}"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>

                        <!-- Home Welcome Panel -->
                        <StackPanel Visibility="{Binding IsAtHome, Converter={StaticResource BooleanToVis}}">
                            <Border Background="{StaticResource BackgroundBrush}" CornerRadius="10" Padding="16" Margin="0,0,0,16">
                                <StackPanel>
                                    <TextBlock Text="&#x1F680; Welcome" FontSize="16" FontWeight="Bold"
                                               Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,12"/>
                                    <TextBlock TextWrapping="Wrap" FontSize="12" LineHeight="20"
                                               Foreground="{StaticResource TextSecondaryBrush}">
                                        <Run Text="DiskWise helps you analyze disk space and identify files safe to delete."/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                            <Border Background="{StaticResource BackgroundBrush}" CornerRadius="10" Padding="16">
                                <StackPanel>
                                    <TextBlock Text="&#x1F4A1; Quick Tips" FontSize="14" FontWeight="SemiBold"
                                               Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,10"/>
                                    <StackPanel Margin="0,0,0,6">
                                        <TextBlock Text="1. Select a drive or recent folder" FontSize="11"
                                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                                    </StackPanel>
                                    <StackPanel Margin="0,0,0,6">
                                        <TextBlock Text="2. Click 'Scan' to analyze sizes" FontSize="11"
                                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                                    </StackPanel>
                                    <StackPanel>
                                        <TextBlock Text="3. Use AI to check if safe to delete" FontSize="11"
                                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!-- Non-Home Content -->
                        <StackPanel Visibility="{Binding IsAtHome, Converter={StaticResource BoolToVis}, ConverterParameter=Invert}">
                            <Rectangle Height="1" Fill="{StaticResource BorderBrush}" Margin="0,0,0,16"/>

                            <TextBlock Text="&#x1F4CB; Item Details"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       FontWeight="Bold" FontSize="14" Margin="0,0,0,12"/>

                            <!-- No Selection - Show Current Folder Info -->
                            <StackPanel Visibility="{Binding SelectedItem, Converter={StaticResource BoolToVis}, ConverterParameter=Invert}">
                                <TextBlock Text="{Binding CurrentPathDisplay}"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           FontWeight="SemiBold" FontSize="13"
                                           TextWrapping="Wrap" Margin="0,0,0,8"/>

                                <TextBlock Text="Select an item to view detailed information"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           FontSize="12" FontStyle="Italic"
                                           TextWrapping="Wrap"/>
                            </StackPanel>

                            <!-- Selected Item Details -->
                            <StackPanel Visibility="{Binding SelectedItem, Converter={StaticResource BoolToVis}}">
                                <Border Background="{StaticResource BackgroundBrush}" CornerRadius="8" Padding="12" Margin="0,0,0,12">
                                    <TextBlock Text="{Binding SelectedItem.Name}"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               FontWeight="Bold" FontSize="14"
                                               TextWrapping="Wrap"/>
                                </Border>

                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Path"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               FontSize="11" Margin="0,0,0,4"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedItem.Path}"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               FontSize="11" TextWrapping="Wrap" Margin="0,0,0,12"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Size"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               FontSize="11" Margin="0,0,0,4"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1"
                                               Text="{Binding SelectedItem.Size, Converter={StaticResource SizeConverter}}"
                                               Foreground="{StaticResource AccentBlueBrush}"
                                               FontSize="16" FontWeight="Bold" Margin="0,0,0,12"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Files"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               FontSize="11" Margin="0,0,0,4"
                                               Visibility="{Binding SelectedItem.IsDirectory, Converter={StaticResource BooleanToVis}}"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1"
                                               Text="{Binding SelectedItem.FileCount, StringFormat='{}{0:N0} files'}"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               FontSize="12" Margin="0,0,0,12"
                                               Visibility="{Binding SelectedItem.IsDirectory, Converter={StaticResource BooleanToVis}}"/>

                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Modified"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               FontSize="11" Margin="0,0,0,4"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1"
                                               Text="{Binding SelectedItem.LastModified, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               FontSize="12"/>
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Status Bar - Modern Design -->
        <Border Grid.Row="3" Background="{StaticResource CardBrush}"
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0"
                Padding="16,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="{Binding StatusMessage}"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           FontSize="12" FontFamily="Segoe UI"
                           VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal"
                            Visibility="{Binding IsScanning, Converter={StaticResource BooleanToVis}}">
                    <Border Background="{StaticResource BackgroundBrush}" CornerRadius="10"
                            Padding="12,6" Margin="0,0,12,0">
                        <StackPanel Orientation="Horizontal">
                            <ProgressBar IsIndeterminate="True" Width="100" Height="4" Margin="0,0,12,0"
                                         Style="{StaticResource SizeProgressBar}"/>
                            <TextBlock Text="{Binding ScannedItems, StringFormat='Scanned: {0:N0} items'}"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       FontSize="12" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
